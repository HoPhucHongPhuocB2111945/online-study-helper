{
  "manifest_version": 3,
  "name": "StudyMate",
  "description": "Trợ lý học tập: tra từ, ghi chú, tóm tắt, đọc, ẩn mạng xã hội, flashcard",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}